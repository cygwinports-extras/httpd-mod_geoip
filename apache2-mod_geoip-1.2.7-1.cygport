inherit apache2

HOMEPAGE="http://www.maxmind.com/app/mod_geoip"
SRC_URI="http://www.maxmind.com/download/geoip/api/${ORIG_PN}2/${ORIG_PN}2_${PV}.tar.gz"
SRC_DIR="${ORIG_PN}2_${PV}"

src_compile() {
	lndirs
	cd ${B}
	apache2_apxs_compile *.c -lGeoIP
}

src_install() {
	cd ${B}
	doapache2mod ${ORIG_PN}
	apache2_postinst
}
